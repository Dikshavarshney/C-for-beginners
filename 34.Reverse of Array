#include<stdio.h>

int main(){

    int n, i, arr[100];
    
    printf("\nEnter the how many numbers you want to print in array- ");
    scanf("%d",&n);

    for( i = 0; i < n; i++){

        printf("\nEnter the %d element to array- ",i+1);
        scanf("%d",&arr[i]);
    }

    printf("\n\n`````The elements of array`````\n\n");

    for( i = 0; i < n; i++){
        printf("%5d", arr[i]);
    }

    printf("\n\n`````The reverse elements of array`````\n\n");
    
    for( i = n-1; i >= 0; i--){
        printf("%5d", arr[i]);
    }

    printf("\n\n");
    return 0;  
}
