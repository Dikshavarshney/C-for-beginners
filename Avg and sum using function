#include<stdio.h>
int sum_avg (int a, int b, int *sum, float *avg)
{
    *sum = a+b;
    *avg = (float)*sum/2;
}

int main()
{
   int i,j,sum;
   float avg;
   
   i=4;
   j=5;
   
   sum_avg(i,j, &sum, &avg);
   
   printf("the sum of i and j is :%d\n", sum );
   printf("the avg of i and j is :%f", avg );
   
   return 0;
}
